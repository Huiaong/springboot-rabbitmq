<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.huiaong.normal.trade.impl.dao.NormalMessageDao">
    <resultMap type="com.huiaong.normal.trade.sms.model.NormalMessage" id="NormalMessageMap">
        <id property="id" column="id"/>
        <result property="message" column="message"/>
        <result property="platform" column="platform"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="tb">
        `normal_message`
    </sql>

    <sql id="cols_exclude_id">
        message, platform,
        create_time, update_time
    </sql>

    <sql id="cols">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="criteria">
        <if test="id != null">and id = #{id}</if>
        <if test="message != null">and message = #{message}</if>
        <if test="platform != null">and platform = #{platform}</if>
    </sql>

    <sql id="values">
        #{message}, #{platform},
         now(), now()
    </sql>

    <select id="findById" parameterType="long" resultMap="NormalMessageMap">
        select <include refid="cols"/>
        from <include refid="tb"/>
        where id = #{id}
    </select>

    <select id="findByCriteria" parameterType="map" resultMap="NormalMessageMap">
        select <include refid="cols"/>
        from <include refid="tb"/>
        <where>
            <include refid="criteria"/>
        </where>
    </select>

    <insert id="create" parameterType="com.huiaong.normal.trade.sms.model.NormalMessage" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb" />
        (<include refid="cols_exclude_id" />)
        VALUES
        (<include refid="values" />)
    </insert>
</mapper>